server.port=9000
server.context-path=/bsc
mode_local=false

#--- Spring Admin ---#
spring.boot.admin.url=<%= @admin_server_url %>
#--- Spring Admin ---#

#--- Security ---#
security.url=<%= @komea_security_url %>
security.user.name=<%= @default_user %>
security.user.password=<%= @default_password %>
#--- Security ---#

#--- Central Authentication Service ---#
<% if @cas_url %>
spring.profiles.active=casAuthentication
security.cas.prefix = <%= @cas_url %>
security.cas.serviceHome = <%= @komea_gui_url %>
<% else %>
spring.profiles.active=komeaAuthentication
<% end %>
#--- Central Authentication Service ---#

#--- Dashboard Services ---#
services.organization.url=http://localhost:8091
services.metrics.url=http://localhost:8092
services.timeseries.url=http://localhost:8090
services.login=<%= @default_user %>
services.password=<%= @default_password %>
#--- Dashboard Services ---#

#------ Logging ------#
logging.config=logback.xml
#------ Logging ------#
